{
    "description": "关键词过滤配置 - 基于特定关键词的智能过滤",
    "source_channel": "general_channel",
    "target_channels": ["keyword_filtered"],
    "keywords": [
      "重要通知",
      "系统维护", 
      "版本更新",
      "安全警告",
      "紧急",
      "urgent",
      "important",
      "critical",
      "alert"
    ],
    "exclude_forwards": false,
    "exclude_replies": false,
    "exclude_text": false,
    "exclude_links": false,
    "remove_captions": false,
    "media_types": [
      "photo",
      "video",
      "document",
      "audio"
    ],
    "text_filter": [
      {
        "original_text": "警告",
        "target_text": "⚠️ 警告"
      },
      {
        "original_text": "紧急",
        "target_text": "🚨 紧急"
      },
      {
        "original_text": "维护",
        "target_text": "🔧 维护"
      }
    ],
    "enabled": true,
    "notes": "用于过滤重要信息的配置，支持中英文关键词，并添加emoji前缀以增强可视性"
  }