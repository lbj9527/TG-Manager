{
    "simple_replacement": {
      "description": "简单文本替换",
      "input": "这是旧版本的消息",
      "rules": {
        "旧版本": "新版本"
      },
      "expected": "这是新版本的消息"
    },
    "multiple_replacements": {
      "description": "多个替换规则",
      "input": "测试版beta功能已发布",
      "rules": {
        "测试版": "正式版",
        "beta": "release"
      },
      "expected": "正式版release功能已发布"
    },
    "no_replacement_needed": {
      "description": "无需替换的文本",
      "input": "这是正常的消息内容",
      "rules": {
        "旧版本": "新版本",
        "beta": "release"
      },
      "expected": "这是正常的消息内容"
    },
    "partial_replacement": {
      "description": "部分匹配替换",
      "input": "包含旧版本和新内容的混合消息",
      "rules": {
        "旧版本": "新版本",
        "不存在的词": "替换词"
      },
      "expected": "包含新版本和新内容的混合消息"
    },
    "case_sensitive": {
      "description": "大小写敏感替换",
      "input": "Beta和beta是不同的",
      "rules": {
        "beta": "release"
      },
      "expected": "Beta和release是不同的"
    },
    "emoji_replacement": {
      "description": "包含emoji的替换",
      "input": "警告：系统将维护",
      "rules": {
        "警告：": "⚠️ 警告：",
        "维护": "🔧 维护"
      },
      "expected": "⚠️ 警告：系统将🔧 维护"
    },
    "empty_input": {
      "description": "空文本处理",
      "input": "",
      "rules": {
        "任何文本": "替换文本"
      },
      "expected": ""
    },
    "empty_rules": {
      "description": "空替换规则",
      "input": "正常文本内容",
      "rules": {},
      "expected": "正常文本内容"
    },
    "complex_replacement": {
      "description": "复杂文本替换",
      "input": "临时版本beta-1.0发布，包含测试功能，请谨慎使用",
      "rules": {
        "临时版本": "正式版本",
        "beta-1.0": "release-1.0",
        "测试功能": "完整功能",
        "谨慎使用": "放心使用"
      },
      "expected": "正式版本release-1.0发布，包含完整功能，请放心使用"
    },
    "overlapping_patterns": {
      "description": "重叠模式替换",
      "input": "测试版测试功能",
      "rules": {
        "测试版": "正式版",
        "测试功能": "完整功能"
      },
      "expected": "正式版完整功能"
    },
    "special_characters": {
      "description": "特殊字符替换",
      "input": "文件路径：C:\\temp\\test.txt",
      "rules": {
        "C:\\temp\\": "D:\\production\\",
        "test.txt": "production.txt"
      },
      "expected": "文件路径：D:\\production\\production.txt"
    },
    "multiline_text": {
      "description": "多行文本替换",
      "input": "第一行：旧版本\n第二行：测试内容\n第三行：临时文件",
      "rules": {
        "旧版本": "新版本",
        "测试内容": "正式内容",
        "临时文件": "正式文件"
      },
      "expected": "第一行：新版本\n第二行：正式内容\n第三行：正式文件"
    },
    "url_replacement": {
      "description": "URL替换",
      "input": "访问测试地址：https://test.example.com",
      "rules": {
        "测试地址": "正式地址",
        "https://test.example.com": "https://www.example.com"
      },
      "expected": "访问正式地址：https://www.example.com"
    }
  }